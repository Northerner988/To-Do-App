@page
@model ToDoList.Pages_Tasks.AddTaskModel

@{
    ViewData["Title"] = "Create";
}

<div class="pt-5">
    <div class="col-md-5 mx-auto">
   <form method="post">
    <div class="form__container">
        <h2>Create New Note</h2>

        <div class="form-group my-3">
            <label asp-for="ToDoTask.Title" class="control-label"></label>
            <input asp-for="ToDoTask.Title" class="form-control" required />
            <span asp-validation-for="ToDoTask.Title" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="ToDoTask.Description" class="control-label"></label>
            <textarea asp-for="ToDoTask.Description" class="form-control" rows="6" required></textarea>
            <span asp-validation-for="ToDoTask.Description" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="ToDoTask.SelectDate" class="control-label">Select A Date</label>
            <input asp-for="ToDoTask.SelectDate" type="date" class="form-control" 
            min="@DateTime.Now.ToString("yyyy-MM-dd")"
             />
            <span asp-validation-for="ToDoTask.SelectDate" class="text-danger"></span>
        </div>

        <button type="submit" class="submit-btn">ADD</button>
    </div>
</form>




    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
